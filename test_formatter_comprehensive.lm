// Test file for comprehensive formatter behavior
var x: int = 42;

// Basic function with default parameters
fn test_function(a: int, b: str = "default") {
    print("Testing function");
    
    // String interpolation
    var message = "Value is {a} and name is {b}";
    print(message);
    
    // Control flow
    if (a > 0) {
        print("Positive");
    } else {
        print("Non-positive");
    }
    
    // Loops
    iter (i in 1..5) {
        print("Iteration {i}");
    }
    
    // Complex expressions
    var result = a + 10 * 2 - (b.length() / 2);
    
    return result;
}

