// Test visibility and modifier parsing (corrected)

abstract class Shape {
    // Fields
    pub name: str = "shape";
    prot area: float = 0.0;
    const id: int = 1;
    static count: int = 0;
    
    // Methods
    pub fn getName() : str {
        return self.name;
    }
    
    prot fn calculateArea() : float {
        return self.area;
    }
    
    // Abstract methods cannot have a body or be final/static
    abstract fn draw();
    
    // Final method prevents overriding in subclasses
    final fn getId() : int {
        return self.id;
    }
    
    // Static method belongs to the class, not instances
    static fn getCount() : int {
        return Shape.count;
    }
}

// Final class cannot be extended; methods inside donâ€™t need to be final
final class Circle : Shape {
    pub radius: float;
    
    fn draw() {
        print("Drawing circle with radius {self.radius}");
    }
}

// Simple data struct (no visibility modifiers needed)
data class Point {
    x: float;
    y: float;
}

print("Visibility and modifier parsing test complete");
