// Test basic function functionality
print("=== Basic Function Tests ===");

// Test 1: Simple function
fn add(a: int, b: int): int {
    return a + b;
}

print("add(3, 4) = " + add(3, 4));

// Test 2: Function with local variables
fn calculate(x: int): int {
    var temp = x * 2;
    var result = temp + 5;
    return result;
}

print("calculate(10) = " + calculate(10));

// Test 3: Recursive function
fn factorial(n: int): int {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

print("factorial(5) = " + factorial(5));

// Test 4: Function returning function (higher-order)
fn createAdder(x: int): function {
    return fn(y: int): int {
        return x + y;
    };
}

var addFive = createAdder(5);
print("addFive(3) = " + addFive(3));

print("=== Basic Function Tests Complete ===");