// Test case: Class member visibility for imported classes
// This should be checked at compile-time by the type_checker

// Import a class from another module
import person_module show Person, Employee;

// Function accessing imported class members
fn accessImportedClassMembers() {
    let person = Person("Alice", 25, "987-65-4321");
    
    // Should work: accessing public member from imported class
    print("Public name: " + person.name);
    
    // Should NOT work: accessing protected member from different module
    // This should be caught by type_checker at compile-time
    print("Protected age: " + person.age);  // ERROR: Cannot access protected member from different module
    
    // Should NOT work: accessing private member from different module
    // This should be caught by type_checker at compile-time
    print("Private SSN: " + person.ssn);  // ERROR: Cannot access private member from different module
    
    // Method calls with same visibility rules
    print("Public method: " + person.getName());  // Should work
    
    // Should NOT work: protected method from different module
    print("Protected method age: " + person.getAge());  // ERROR: Cannot access protected method
    
    // Should NOT work: private method from different module
    print("Private method SSN: " + person.getSSN());  // ERROR: Cannot access private method
}

// Class in this module that tries to inherit from imported class
class Manager extends Person {
    department: str;  // private by default
    
    pub fn init(name: str, age: int, ssn: str, department: str) {
        super.init(name, age, ssn);
        this.department = department;
    }
    
    pub fn displayManagerInfo() {
        // Should work: accessing public member from inherited class
        print("Manager name: " + this.name);
        
        // Should work: accessing protected member from subclass (even across modules)
        print("Manager age: " + this.age);
        
        // Should NOT work: accessing private member from subclass across modules
        // This should be caught by type_checker at compile-time
        print("Manager SSN: " + this.ssn);  // ERROR: Cannot access private member across modules
    }
}

accessImportedClassMembers();