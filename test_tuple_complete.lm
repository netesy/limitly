// Complete tuple functionality test

print("=== Complete Tuple Functionality Test ===");

// 1. Tuple creation and display
print("\n1. Tuple Creation:");
var basic = (1, 2, 3);
var mixed = (42, "hello", true);
var empty = ();
print("Basic:", basic);
print("Mixed:", mixed);
print("Empty:", empty);

// 2. Tuple indexing
print("\n2. Tuple Indexing:");
print("basic.0 =", basic.0);
print("basic.1 =", basic.1);
print("basic.2 =", basic.2);
print("mixed.1 =", mixed.1);

// 3. Tuple destructuring
print("\n3. Tuple Destructuring:");
var (a, b, c) = basic;
print("Destructured basic: a =", a, "b =", b, "c =", c);

var (num, text, flag) = mixed;
print("Destructured mixed: num =", num, "text =", text, "flag =", flag);

// 4. Function returning tuples
print("\n4. Functions with Tuples:");
fn makePair(x: int, y: str): (int, str) {
    return (x, y);
}

var pair = makePair(100, "test");
print("Function result:", pair);

var (pairNum, pairStr) = makePair(200, "world");
print("Destructured function result: num =", pairNum, "str =", pairStr);

// 5. Nested tuples
print("\n5. Nested Tuples:");
var nested = ((1, 2), (3, 4));
print("Nested:", nested);
print("First pair:", nested.0);
print("Second pair:", nested.1);
print("Nested element:", nested.0.1);

var (first, second) = nested;
print("Destructured nested: first =", first, "second =", second);

// 6. Edge cases
print("\n6. Edge Cases:");
var (x, y) = (10, 20, 30, 40);  // More elements than variables
print("Partial destructuring: x =", x, "y =", y);

var (p, q, r, s) = (100, 200);  // More variables than elements
print("Over-destructuring: p =", p, "q =", q, "r =", r, "s =", s);

print("\n=== All tuple features working! ===");