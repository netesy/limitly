// Simple test to debug type checker behavior

class DebugClass {
    pub publicField: str;
    prot protectedField: int;
    privateField: bool;  // private by default
    
    pub fn init(pub: str, prot: int, priv: bool) {
        this.publicField = pub;
        this.protectedField = prot;
        this.privateField = priv;
    }
}

fn testAccess() {
    var obj = DebugClass("public", 42, true);
    
    // This should work - public field
    print("Public: " + obj.publicField);
    
    // This should be caught by type_checker as compile-time error (same module, so should actually work)
    print("Protected: " + obj.protectedField);
    
    // This should be caught by type_checker as compile-time error (same module, so should actually work)  
    print("Private: " + obj.privateField);
}

testAccess();