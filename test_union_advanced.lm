// Test advanced union type runtime support

// Define color types as string aliases first
type Red = str;
type Green = str;
type Blue = str;
type Yellow = str;

// Multi-variant union type
type Color = Red | Green | Blue | Yellow;

// Variable with multi-variant union
var color: Color;

// Test assignments
color = "Red";
print("Color is: ");
print(color);

color = "Blue";
print("Color is: ");
print(color);

// Test union type with different value types
type MixedValue = int | str | bool;
var mixed: MixedValue;

mixed = 123;
print("Mixed value (int): ");
print(mixed);

mixed = "test";
print("Mixed value (str): ");
print(mixed);

mixed = true;
print("Mixed value (bool): ");
print(mixed);

print("Advanced union type test completed");