// Test basic closure functionality with proper Limit syntax

// Function that returns a closure (lambda that captures variables)
fn make_adder(x: int): function(int): int {
    return fn(y: int): int { return x + y; };  // Lambda captures x from outer scope
}

// Test the closure
print("Testing closures:");
var add_ten = make_adder(10);
var result = add_ten(5);
print("add_ten(5) =", result);  // Should print 15

// Test with different captured value
var add_twenty = make_adder(20);
var result2 = add_twenty(7);
print("add_twenty(7) =", result2);  // Should print 27