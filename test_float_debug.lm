// Debug float type issues in pattern matching

print("=== Float Type Debug Test ===");

// Test 1: Simple float literal
var floatValue = 3.14;
print("Float value: " + floatValue);

// Test 2: Float type annotation
var annotatedFloat: f64 = 2.71;
print("Annotated float: " + annotatedFloat);

// Test 3: Union with float
type NumberType = int | f64;
var unionFloat: NumberType = 1.5;

print("Union float value: " + unionFloat);

// Test 4: Pattern matching with float
match (unionFloat) {
    int => print("Matched as int: " + unionFloat),
    f64 => print("Matched as f64: " + unionFloat)
}

// Test 5: Direct float literal in union
var directFloat: NumberType = 4.2;
match (directFloat) {
    int => print("Direct float matched as int: " + directFloat),
    f64 => print("Direct float matched as f64: " + directFloat)
}

print("=== Float Type Debug Test Completed ===");