// Test visibility keywords in class declarations

// Data class with automatic final and const fields
data class Point {
    x: float;
    y: float;
}

// Abstract class with various visibility modifiers
abstract class Shape {
    pub name: str = "shape";
    prot area: float = 0.0;
    const id: int = 0;
    static count: int = 0;
    
    pub fn getName() : str {
        return self.name;
    }
    
    prot fn setArea(newArea: float) {
        self.area = newArea;
    }
    
    abstract fn calculateArea() : float;
    
    final fn describe() {
        print("Shape: {self.name}, Area: {self.area}");
    }
    
    static fn getCount() : int {
        return Shape.count;
    }
}

// Final class that extends Shape
final class Circle : Shape {
    pub radius: float;
    
    pub fn init(radius: float) {
        self.radius = radius;
        self.name = "circle";
        self.setArea(self.calculateArea());
    }
    
    fn calculateArea() : float {
        return 3.14159 * self.radius * self.radius;
    }
}

// Regular class with mixed visibility
class Rectangle : Shape {
    pub width: float;
    pub height: float;
    
    pub fn init(width: float, height: float) {
        self.width = width;
        self.height = height;
        self.name = "rectangle";
        self.setArea(self.calculateArea());
    }
    
    fn calculateArea() : float {
        return self.width * self.height;
    }
}

// Test usage
var point = Point(3.0, 4.0);
print("Point: ({point.x}, {point.y})");

var circle = Circle();
circle.init(5.0);
circle.describe();

var rect = Rectangle();
rect.init(4.0, 6.0);
rect.describe();

print("Total shapes: {Shape.getCount()}");