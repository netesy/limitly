// Union Type Pattern Matching Error Tests
// This file should trigger type checker errors for non-exhaustive patterns

print("=== Testing Non-Exhaustive Pattern Matching ===");

// Test 1: Non-exhaustive pattern matching - missing str case
type NumberOrString = int | str;
var value1: NumberOrString = 42;

// This should trigger an exhaustiveness error
match (value1) {
    int => print("Got integer: " + value1)
    // Missing str case - should cause error
}

// Test 2: Non-exhaustive pattern matching - missing multiple cases  
type MultiType = int | str | bool | f64;
var value2: MultiType = 123;

// This should trigger an exhaustiveness error
match (value2) {
    int => print("Got integer: " + value2),
    str => print("Got string: " + value2)
    // Missing bool and f64 cases - should cause error
}

print("=== End of Error Tests ===");