// Test variable declarations and assignments
print("=== Variable Declaration Tests ===");

// Basic variable declarations
var x = 42;
var y = 3.14;
var name = "Limit";
var isActive = true;

assert(x == 42, "Integer variable declaration failed");
assert(y == 3.14, "Float variable declaration failed");
assert(name == "Limit", "String variable declaration failed");
assert(isActive, "Boolean variable declaration failed");

// Variable reassignment
x = 100;
y = 2.71;
name = "Language";
isActive = false;

print("After reassignment:");
assert(x == 100, "Integer variable reassignment failed");
assert(y == 2.71, "Float variable reassignment failed");
assert(name == "Language", "String variable reassignment failed");
assert(!isActive, "Boolean variable reassignment failed");

// Multiple declarations
var a = 1;
var b = 2;
var c = 3;
assert(a == 1 and b == 2 and c == 3, "Multiple declarations failed");