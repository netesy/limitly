// Test variable declarations and assignments
print("=== Variable Declaration Tests ===");

// Basic variable declarations
var x = 42;
var y = 3.14;
var name = "Limit";
var isActive = true;

print("Integer: {x}");
print("Float: {y}");
print("String: {name}");
print("Boolean: {isActive}");

// Variable reassignment
x = 100;
y = 2.71;
name = "Language";
isActive = false;

print("After reassignment:");
print("Integer: {x}");
print("Float: {y}");
print("String: {name}");
print("Boolean: {isActive}");

