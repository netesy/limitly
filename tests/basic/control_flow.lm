// Test control flow statements
print(" === Control Flow Tests === ");

// If statements
var x = 10;
var y = 5;

print("If statement tests: ");
if (x > y) {
    assert(true, "x should be greater than y");
}

if (x < y) {
    assert(false, "This should not execute");
} else {
    assert(true, "x should not be less than y");
}

// If-elif-else chain
var score = 75;
var grade = "";
print("Grade calculation: ");
if (score >= 90) {
    grade = "A";
} elif (score >= 80) {
    grade = "B";
} elif (score >= 70) {
    grade = "C";
} else {
    grade = "F";
}
assert(grade == "C", "Grade should be C");

// Nested if statements
print("Nested if test: ");
var a = 15;
var nested_check = false;
if (a > 10) {
    if (a > 20) {
        nested_check = false;
    } else {
        nested_check = true;
    }
}
assert(nested_check, "Nested if condition failed");

// Boolean conditions
var isActive = true;
var isValid = false;

if (isActive and !isValid) {
    assert(true, "Active but not valid");
}

if (isActive or isValid) {
    assert(true, "At least one is true");
}
