// Test control flow statements
print("=== Control Flow Tests ===");

// If statements
var x = 10;
var y = 5;

print("If statement tests:");
if (x > y) {
    print("x is greater than y");
}

if (x < y) {
    print("This should not print");
} else {
    print("x is not less than y");
}

// If-else if-else chain
var score = 85;
print("Grade calculation:");
if (score >= 90) {
    print("Grade: A");
} else if (score >= 80) {
    print("Grade: B");
} else if (score >= 70) {
    print("Grade: C");
} else {
    print("Grade: F");
}

// Nested if statements
print("Nested if test:");
var a = 15;
if (a > 10) {
    print("a is greater than 10");
    if (a > 20) {
        print("a is also greater than 20");
    } else {
        print("but a is not greater than 20");
    }
}

// Boolean conditions
var isActive = true;
var isValid = false;

if (isActive && !isValid) {
    print("Active but not valid");
}

if (isActive || isValid) {
    print("At least one is true");
}