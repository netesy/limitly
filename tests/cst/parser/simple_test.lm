// Simple test file for CST parser validation
print("Hello, World!");

var x = 42;
var y = x + 10;

assert(x == 42, "Variable x should be 42");
assert(y == 52, "Variable y should be 52 (42 + 10)");

if (x > 0) {
    print("x is positive: {x}");
    assert(x > 0, "x should be positive");
} else {
    print("x is not positive: {x}");
    assert(false, "This branch should not execute");
}

fn add(a: int, b: int): int {
    return a + b;
}

var result = add(x, y);
assert(result == 94, "add(42, 52) should return 94");
print("Result: {result}");