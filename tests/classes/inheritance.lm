// Test class inheritance (if implemented)
print("=== Class Inheritance Tests ===");

// Base class
class Animal {
    fn init(name) {
        self.name = name;
    }
    
    fn speak() {
        print("{self.name} makes a sound");
    }
    
    fn info() {
        print("self is {self.name}");
    }
}

// Derived class
class Dog extends Animal {
    fn init(name, breed) {
        super.init(name);
        self.breed = breed;
    }
    
    fn speak() {
        print("{self.name} barks!");
    }
    
    fn wagTail() {
        print("{self.name} wags tail happily");
    }
}

// Another derived class
class Cat extends Animal {
    fn speak() {
        print("{self.name} meows");
    }
    
    fn purr() {
        print("{self.name} purrs contentedly");
    }
}

print("Inheritance test:");
var dog = Dog("Buddy", "Golden Retriever");
var cat = Cat("Whiskers");

print("Dog methods:");
dog.info();
dog.speak();
dog.wagTail();

print("Cat methods:");
cat.info();
cat.speak();
cat.purr();

// Polymorphism test
print("Polymorphism test:");
var animals = [dog, cat];
for (var animal in animals) {
    animal.speak();
}