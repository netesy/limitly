// String utilities module
var greeting = "Hello";
var farewell = "Goodbye";

pub fn say_hello(name) {
    return greeting + ", " + name + "!";
}

pub fn say_goodbye(name) {
    return farewell + ", " + name + "!";
}

pub fn repeat_string(text, times) {
    var result = "";
    iter (i in 1..times) {
        result = result + text;
    }
    return result;
}