// Math module with functions that return values
pub fn add(a, b) {
    return a + b;
}

pub fn multiply(x, y) {
    return x * y;
}


pub fn square(x: int): int {
    return x * x;
}
pub fn subtract(a: int, b: int): int {
    return a - b;
}

fn factorial(n: int): int {
    if (n <= 1) { return 1; }
    return n * factorial(n - 1);
}

pub fn is_even(n: int): bool {
    return n % 2 == 0;
}

pub fn is_odd(n: int): bool {
    return !is_even(n);
}

pub fn is_prime(n: int): bool {
    if (n <= 1) { return false; }
    if (n == 2) { return true; }
    if (is_even(n)) { return false; }

    var i: int = 3;
    while (i * i <= n) {
        if (n % i == 0) { return false; }
        i += 2;
    }
    return true;
}
