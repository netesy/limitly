// Nested while loops
print("Nested while loops:");
var outer = 0;
while (outer < 2) {
    var inner = 0;
    while (inner < 3) {
        print("({outer}, {inner})");
        inner += 1;
    }
    outer += 1;
}

// While loop with break/continue (if implemented)
print("While with early termination:");
var count = 0;
while (count < 10) {
    if (count == 3) {
        count += 1;
        continue;
    }
    if (count == 7) {
        break;
    }
    print("count = {count}");
    count += 1;
}