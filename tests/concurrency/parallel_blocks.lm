// Test parallel blocks (if implemented)
print("=== Parallel Block Tests ===");

// Basic parallel block
print("Basic parallel execution:");
parallel {
    print("Task 1: Starting");
    for (var i = 0; i < 3; i += 1) {
        print("Task 1: Step {i}");
    }
    print("Task 1: Complete");
} and {
    print("Task 2: Starting");
    for (var j = 0; j < 3; j += 1) {
        print("Task 2: Step {j}");
    }
    print("Task 2: Complete");
}

print("Parallel block finished");

// Parallel computation
print("Parallel computation:");
var result1 = 0;
var result2 = 0;

parallel {
    // Compute sum of squares
    for (var i = 1; i <= 10; i += 1) {
        result1 += i * i;
    }
    print("Sum of squares: {result1}");
} and {
    // Compute factorial
    result2 = 1;
    for (var i = 1; i <= 5; i += 1) {
        result2 *= i;
    }
    print("Factorial: {result2}");
}

print("Both computations complete");

// Nested parallel blocks
print("Nested parallel blocks:");
parallel {
    print("Outer task 1");
    parallel {
        print("Inner task 1a");
    } and {
        print("Inner task 1b");
    }
} and {
    print("Outer task 2");
    for (var i = 0; i < 2; i += 1) {
        print("Outer task 2: {i}");
    }
}